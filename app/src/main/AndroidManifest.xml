<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bangkit.aot.dampingi">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/dampingi_icon"
        android:networkSecurityConfig="@xml/network_security_config"
        android:label="@string/app_name"
        android:roundIcon="@drawable/dampingi_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Dampingi"
        tools:targetApi="n">

        <uses-library android:name="org.apache.http.legacy" android:required="false"/>

        <activity android:name=".ui.fitur.forum.ChatForum"/>
        <activity android:name=".ui.login.SignUp" />
        <activity android:name=".ui.login.SignIn" />
        <activity android:name=".ui.fitur.darurat.Darurat" />
        <activity android:name=".ui.fitur.pendampingan.Pendampingan" />
        <activity android:name=".ui.fitur.forum.Forum" />
        <activity android:name=".ui.fitur.pelaporan.Pelaporan" />
        <activity android:name=".ui.main.Setting" />
        <activity android:name=".ui.main.Profil" />
        <activity android:name=".ui.login.Login" />
        <activity android:name=".ui.login.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.main.MainActivity" />
    </application>

</manifest>